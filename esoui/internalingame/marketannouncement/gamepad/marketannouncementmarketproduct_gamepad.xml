<GuiXml>
    <Controls>
        <Control name="ZO_MarketAnnouncement_MarketProductTemplate_Gamepad" inherits="ZO_MarketAnnouncement_MarketProductTemplate_Base" virtual="true" >
            <Controls>
                <Label name="$(parent)Type" override="true" font="ZoFontGamepadBold34" />

                <Label name="$(parent)Title" override="true" font="ZoFontGamepad34" />

                <Label name="$(parent)TextCallout" override="true" font="ZoMarketGamepadCalloutFont" />

                <Label name="$(parent)PreviousCost" override="true" font="ZoFontGamepadBold27" />

                <Label name="$(parent)Cost" override="true" font="ZoFontGamepadBold27" />

                <Label name="$(parent)EsoPlusCost" override="true" font="ZoFontGamepadBold27" />

                <Label name="$(parent)Purchased" override="true" hidden="true" />

                <Label name="$(parent)EsoPlusDeal" override="true" font="ZoFontGamepadBold27" />

                <Control name="$(parent)ProductDescription" inherits="ZO_ScrollContainer_Gamepad">
                    <Dimensions x="ZO_MARKET_ANNOUNCEMENT_MARKET_PRODUCT_INFO_WIDTH" />
                    <Controls>
                        <Control name="$(parent)ScrollChild" override="true">
                            <Controls>
                                <Label name="$(parent)ProductDescriptionText" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_NORMAL" font="ZoFontGamepadCondensed34">
                                    <Dimensions x="ZO_MARKET_ANNOUNCEMENT_MARKET_PRODUCT_INFO_WIDTH" />
                                    <Anchor point="TOPLEFT" />
                                </Label>
                            </Controls>
                        </Control>

                        <Texture name="$(parent)ScrollIndicator" override="true" level="ZO_MARKET_TILE_TEXT_LEVEL" />
                    </Controls>
                </Control>

                <Label name="$(parent)BundledProducts" override="true" font="ZoFontGamepad34">
                    <Controls>
                        <Label name="$(parent)Label" override="true" font="ZoFontGamepadBold25" />
                    </Controls>
                </Label>
            </Controls>
        </Control>
    </Controls>
</GuiXml>