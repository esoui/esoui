<GuiXml>
    <Controls>
        <Control name="ZO_CharacterCreateCategoryBucket_Keyboard" virtual="true" hidden="true">
            <Controls>
                <Control name="$(parent)Pane" inherits="ZO_ScrollContainer">
                    <AnchorFill />
                </Control>
            </Controls>
        </Control>

        <Control name="ZO_CharacterCreateSubCategoryBucket_Keyboard" virtual="true" hidden="true" resizeToFitDescendents="true">
            <Controls>
                <Label name="$(parent)Name" font="ZoFontWindowSubtitle">
                    <Dimensions x="332" />
                    <Anchor point="TOP" />
                </Label>

                <Texture name="$(parent)Divider" textureFile="EsoUI/Art/Miscellaneous/horizontalDivider.dds">
                    <Dimensions x="332" y="4" />
                    <Anchor point="TOP" relativeTo="$(parent)Name" relativePoint="BOTTOM" offsetY="2" />
                </Texture>

                <Control name="$(parent)TopSpacer">
                    <Dimensions x="332" y="10" />
                    <Anchor point="TOP" relativeTo="$(parent)Name" relativePoint="BOTTOM" offsetY="8" />
                </Control>
            </Controls>
        </Control>
        
        <Button name="ZO_CharacterCreateCategoryTab_Keyboard" mouseOverBlendMode="ADD" virtual="true" clickSound="Click_CC_Selector">
            <Dimensions x="64" y="64" />
        </Button>
    </Controls>
</GuiXml>
